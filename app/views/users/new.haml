%h1 Sign up

= form_for @user do |f|
  - if @user.errors.any?
    .error-messages
      %h2 Form is invalid
      %ul
        - @user.errors.full_messages.each do |err|
          %li
            = err
  %p
    = f.label :email
    = f.text_field :email
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %p
    = f.submit
